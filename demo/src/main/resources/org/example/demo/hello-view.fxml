<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Pos?>
<?import javafx.scene.text.Font?>

<AnchorPane fx:controller="org.example.demo.HelloController" prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1">
   <children>
      <!-- Título -->
      <Label layoutX="180.0" layoutY="20.0" text="Controle de Biblioteca" styleClass="title-label" />

      <!-- Botões de Navegação -->
      <Button layoutX="50.0" layoutY="100.0" text="Adicionar Livro" onAction="#adicionarLivro" />
      <Button layoutX="250.0" layoutY="100.0" text="Buscar Livro" onAction="#buscarLivro" />
      <Button layoutX="450.0" layoutY="100.0" text="Visualizar Estoque" onAction="#visualizarEstoque" />

      <!-- Caixa de Texto para Entrada de Dados -->
      <TextField fx:id="inputLivro" layoutX="50.0" layoutY="200.0" promptText="Digite o nome do livro..." />

      <!-- Caixa de Texto para Resultado -->
      <TextArea fx:id="outputResultado" layoutX="50.0" layoutY="250.0" prefHeight="100.0" prefWidth="500.0" wrapText="true" editable="false" />

   </children>
</AnchorPane>
